{
    "version": 2,
    "builds": [
        {
            "src": "api/vercel_app.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": [
                    "server/**"
                ]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/vercel_app.py"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ]
}