# ============================================
# POC 1: AI Adoption Metrics Dashboard
# Environment Configuration
# ============================================

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_ORG=your_organization_name
GITHUB_ENTERPRISE_URL=  # Leave empty for github.com, or set for GitHub Enterprise

# Database Configuration
DATABASE_URL=sqlite:///./data/metrics.db
# For PostgreSQL: postgresql://user:password@localhost:5432/metrics_db

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Data Refresh Settings (in minutes)
DATA_REFRESH_INTERVAL=60
HISTORICAL_DAYS=90

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_GITHUB_SERVER_PATH=  # Path to GitHub MCP server if using local

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_MCP_TRACKING=true
ENABLE_GIT_ANALYSIS=true
ENABLE_QUALITY_METRICS=true
